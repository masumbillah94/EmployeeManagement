
<div class="modal fade" id="editEmployeeModal" tabindex="-1" aria-labelledby="editEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editEmployeeModalLabel">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editEmployeeForm">
                    <!-- Name -->
                    <div class="mb-3">
                        <label for="empUpdateName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="empUpdateName" required maxlength="50">
                        <input type="hidden" id="empUpdateId">
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="empUpdateEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="empUpdateEmail" required maxlength="50">
                    </div>

                    <!-- Phone and Position in the same row -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="empUpdatePhone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="empUpdatePhone" required maxlength="30">
                        </div>
                        <div class="col-6">
                            <label for="empUpdatePosition" class="form-label">Position</label>
                            <input type="text" class="form-control" id="empUpdatePosition" required maxlength="50">
                        </div>
                    </div>

                    <!-- Gender and Department in the same row -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="empUpdateGender" class="form-label">Gender</label>
                            <select class="form-select" id="empUpdateGender" required>
                                <option value="" selected disabled>Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="empUpdateDepartment" class="form-label">Department</label>
                            <select class="form-select" id="empUpdateDepartment" required>
                                <option value="" selected disabled>Select Department</option>
                                <!-- Department options will be loaded here dynamically -->
                            </select>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class=" row mb-3">

                        <div class="col-6">
                            <label for="empUpdateStatus" class="form-label">Status</label>
                            <select class="form-select" id="empUpdateStatus" required>
                                <option value="" selected status>Select Status</option>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="empUpdateJoiningDate" class="form-label">Joining Date</label>
                            <input type="date" class="form-control" id="empUpdateJoiningDate" required>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="updateEmployeeBtn" onclick="updateEmployee()">Update</button>
            </div>
        </div>
    </div>
</div>
