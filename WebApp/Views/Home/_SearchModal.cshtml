
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Search Employees</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addEmployeeForm">

                    <div class="mb-3">
                        <label for="empSearchName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="empSearchName" maxlength="50">
                    </div>

                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="empSearchDepartment" class="form-label">Department</label>
                            <select class="form-select" id="empSearchDepartment">
                                <option value="" selected disabled>Select Department</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="empSearchPosition" class="form-label">Position</label>
                            <input type="text" class="form-control" id="empSearchPosition" maxlength="50">
                        </div>
                    </div>

                    <div class=" row mb-3">

                        <div class="col-6">
                            <label for="empmin" class="form-label">Minimum Score</label>
                            <input type="number" class="form-control" id="empmin">
                        </div>
                        <div class="col-6">
                            <label for="empmax" class="form-label">Maximum Score</label>
                            <input type="number" class="form-control" id="empmax">
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="performSearchBtn" onclick="getSearchResult()">Search</button>
            </div>
        </div>
    </div>
</div>

